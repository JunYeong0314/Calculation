<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


        </ScrollView>

        <TextView
            android:id="@+id/second_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:text=""
            android:textSize="30dp" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="5">

        <android.widget.Button
            android:id="@+id/clear"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_circle_btn_gray"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="AC"/>

        <android.widget.Button
            android:id="@+id/bracket"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_circle_btn_gray"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="+/-" />

        <android.widget.Button
            android:id="@+id/percent"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_circle_btn_gray"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="%"/>

        <android.widget.Button
            android:id="@+id/div"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_circle_btn_orange"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:textColor="@color/white"
            android:text="÷"  />


        <android.widget.Button
            android:id="@+id/num7"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_ellipse_btn"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="7"/>

        <android.widget.Button
            android:id="@+id/num8"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_ellipse_btn"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="8"/>

        <android.widget.Button
            android:id="@+id/num9"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_ellipse_btn"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="9"/>

        <android.widget.Button
            android:id="@+id/mul"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_circle_btn_orange"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:textColor="@color/white"
            android:text="x"  />


        <android.widget.Button
            android:id="@+id/num4"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_ellipse_btn"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="4"/>

        <android.widget.Button
            android:id="@+id/num5"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_ellipse_btn"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="5"/>

        <android.widget.Button
            android:id="@+id/num9"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_ellipse_btn"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="9"/>

        <android.widget.Button
            android:id="@+id/minus"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_circle_btn_orange"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:textColor="@color/white"
            android:text="ㅡ"  />


        <android.widget.Button
            android:id="@+id/num1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_ellipse_btn"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="1"/>

        <android.widget.Button
            android:id="@+id/num2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_ellipse_btn"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="2"/>

        <android.widget.Button
            android:id="@+id/num3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_ellipse_btn"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="3"/>

        <android.widget.Button
            android:id="@+id/add"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_circle_btn_orange"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:textColor="@color/white"
            android:text="+"  />


        <android.widget.Button
            android:id="@+id/num0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_ellipse_btn"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="0"/>

        <android.widget.Button
            android:id="@+id/back"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_ellipse_btn"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="←"/>

        <android.widget.Button
            android:id="@+id/dot"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_ellipse_btn"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="."/>

        <android.widget.Button
            android:id="@+id/equal"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/shape_for_circle_btn_orange"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="="/>

    </GridLayout>
</LinearLayout>